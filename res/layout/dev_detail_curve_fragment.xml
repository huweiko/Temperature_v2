<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/linearlayoutCurve"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical" 
     android:background="@color/white"
     android:paddingLeft="10dp"
     android:paddingRight="10dp">

     <LinearLayout
         android:id="@+id/linearlayoutCurveMenu"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:orientation="horizontal"
         android:background="@color/white">

         <Button
             android:id="@+id/ButtonWeekCurve"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:layout_weight="1"
             android:background="@color/white"
             android:text="周曲线"
             android:textColor="@color/theme_curve_green_color"
             android:textSize="20sp" />

         <Button
             android:id="@+id/ButtonMonthCurve"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:layout_weight="1"
             android:background="@color/white"
             android:text="月曲线"
             android:textColor="@color/theme_gray_text_color"
             android:textSize="15sp" />
     </LinearLayout>

 	<RelativeLayout
 	    android:id="@+id/dev_detail_curve_loading_linearLayout"
 	    android:layout_width="fill_parent"
 	    android:layout_height="fill_parent"
 	    android:gravity="center"
 	    android:visibility="visible" >
	    <ProgressBar
	    android:id="@+id/district_load_progressBar"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_centerHorizontal="true" 
	      android:layout_centerVertical="true"/>
	
	  	<TextView
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_below="@+id/district_load_progressBar"
	      android:layout_centerHorizontal="true"
	      android:text="@string/loading"
	      android:textColor="@color/transparent_white" />  
	</RelativeLayout>
</LinearLayout>