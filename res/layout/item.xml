<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
	    android:id="@+id/text_status"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="left"
	    android:paddingLeft="3dp"
	    android:singleLine="true"
	    android:textSize="@dimen/text_size_14" 
	    android:textColor="@color/theme_gray_text_color" />
   	<RelativeLayout 
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content">
   	    <FrameLayout
	        android:id="@+id/FrameLayoutDevice"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/itemHigh"
	        android:layout_centerInParent="true" >
	
	        <ImageView
	            android:id="@+id/icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:scaleType="fitXY"
	            android:src="@drawable/icon_temperature" 
	            android:background="@drawable/layout_onclick"/>
	
	        <ImageView
	            android:id="@+id/device_status_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:scaleType="fitXY" />
	    </FrameLayout>



	    <TextView
	        android:id="@+id/text_degree"
	        style="@style/DeviceNormalStyle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:gravity="center_horizontal"
	        android:textSize="@dimen/itemDegreeSize" />
	
	    <ImageView
	        android:id="@+id/alarm"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:background="@drawable/device_alarm_padding"/>
   	</RelativeLayout>

    <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:background="@color/theme_text_padding_color" >
	
	     <ImageView
	         android:id="@+id/device_other_status"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_vertical" 
	         android:padding="2dp"/>
	
	     <TextView
	         android:id="@+id/text_des"
	         android:layout_width="0dp"
	         android:layout_weight="1"
	         android:layout_height="wrap_content"
	         android:singleLine="true"
	         android:layout_gravity="center_vertical"
	         android:gravity="center_horizontal"
	         android:textSize="@dimen/text_size_14" 
	         android:textColor="@color/theme_gray_text_color" />
	     <ImageButton 
	         android:id="@+id/ImageButtonHandle"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:background="@color/transparent"
	         android:layout_gravity="center_vertical" 
	         android:padding="2dp"/>
 	</LinearLayout>

</LinearLayout>