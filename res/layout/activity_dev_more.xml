<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".DistrictListViewActivity" >

    <LinearLayout
        android:id="@+id/LinearLayoutMore"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="@color/theme_blue_color"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/more_activity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/theme_blue_color"
            android:padding="10.0dip"
            android:src="@drawable/setting_activity_back_button" />

        <ImageButton
            android:id="@+id/ImageButtonUserGravatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/layout_onclick"
            android:src="@drawable/user_gravatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/more_activity_title_Textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/theme_blue_option_color"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_below="@+id/LinearLayoutMore"
        android:layout_marginTop="1px" >
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" 
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/TextViewDevUpdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/theme_blue_option_color"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/more_title_update"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1px"
                android:layout_toRightOf="@+id/TextViewDevUpdate"
                android:layout_alignTop="@+id/TextViewDevUpdate"
           		android:layout_alignBottom="@+id/TextViewDevUpdate"
                android:background="@color/theme_blue_option_color"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutUpdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_onclick" >

            <ImageView
                android:id="@+id/ImageViewUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:src="@drawable/upgrade" />

            <TextView
                android:id="@+id/TextViewUpdateIns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ImageViewUpdate"
                android:layout_toRightOf="@+id/ImageViewUpdate"
                android:text="@string/more_check_update" 
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/theme_gray_text_color"/>
			<LinearLayout 
			    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/TextViewUpdateIns"
                android:layout_below="@+id/TextViewUpdateIns"
                android:orientation="horizontal">
			    <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/more_check_update_content" 
	                android:paddingBottom="10dp"
	                android:textSize="@dimen/text_size_13"
                	android:textColor="@color/theme_gray_text_color"/>  
	            <TextView
	                android:id="@+id/TextViewUpdateVersion"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingBottom="10dp"
	                android:textSize="@dimen/text_size_13"
                	android:textColor="@color/theme_gray_text_color"/>  
			</LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow_right_pic" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/TextViewDevQRcodeScanning"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/theme_blue_option_color"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/more_title_QRcode"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1px"
                android:layout_toRightOf="@+id/TextViewDevQRcodeScanning"
                android:background="@color/theme_blue_option_color"
                android:layout_alignTop="@+id/TextViewDevQRcodeScanning"
           		android:layout_alignBottom="@+id/TextViewDevQRcodeScanning"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutQRcodeScanning"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:background="@drawable/layout_onclick">

            <ImageView
                android:id="@+id/ImageViewQRcodeScanning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/qrcode_scanning_pic" />

            <TextView
                android:id="@+id/TextViewQRcodeScanning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ImageViewQRcodeScanning"
                android:text="@string/more_QRcode_scanning" 
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/theme_gray_text_color"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow_right_pic" />
            
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/TextViewDevSetting"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/theme_blue_option_color"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/more_title_setting"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1px"
                android:layout_toRightOf="@+id/TextViewDevSetting"
                android:layout_alignTop="@+id/TextViewDevSetting"
           		android:layout_alignBottom="@+id/TextViewDevSetting"
                android:background="@color/theme_blue_option_color"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutSetting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:background="@drawable/layout_onclick">

            <ImageView
                android:id="@+id/ImageViewSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/setting_pic" />

            <TextView
                android:id="@+id/TextViewSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ImageViewSetting"
                android:text="@string/more_system_setting" 
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/theme_gray_text_color"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow_right_pic" />
            
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>