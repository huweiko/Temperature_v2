<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="DeviceNormalStyle">
        <item name="android:shadowColor">@color/theme_status_text_greencolor_start</item>    
        <item name="android:shadowDx">0</item>    
        <item name="android:shadowDy">0</item>    
        <item name="android:shadowRadius">2</item>    
    </style>
    
    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_25</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>

    </style>
    


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>
    
    <style name="AppTheme" parent="android:Theme.Light" />
    <style name="myProgressBar">
  	<item name="android:indeterminateOnly">false</item>
  	<item name="android:progressDrawable">@drawable/progress_mini</item>
  	<item name="android:indeterminateDrawable">@drawable/progress_mini</item>
  	<item name="android:minHeight">10dip</item>
  	<item name="android:maxHeight">10dip</item>
  	</style>
  	
  
   
    <style name="perference_set_activity">
	 <item name="android:windowBackground">@color/background_color</item>  <!-- 窗口背景 -->
    </style>

    
    <style name="w_w">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
    <style name="f_w">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
     
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
  	 	<item name="android:button">@drawable/login_activity_checkbox</item>
  	 	<item name="android:paddingLeft">20.0dip</item>
  	</style>
    <style name="SettingCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
  	 	<item name="android:button">@drawable/setting_activity_checkbox</item>
  	 	<item name="android:paddingLeft">20.0dip</item>
  	</style>
  	
    <style name="MyRadioGroup" parent="@android:style/Widget.CompoundButton.RadioButton">
  	 	<item name="android:button">@drawable/login_activity_serverip_radiobutton</item>
  	 	<item name="android:paddingLeft">20.0dip</item>
  	</style>
    
    <style name="dialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
</resources>